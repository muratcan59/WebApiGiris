@model WebApiGiris.Models.Personel

@{
    ViewBag.Title = "NewPersonel";
}

<h2>NewPersonel</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnKaydet").click(function () {
            var pId = $("#Id").val();
            var pName = $("#Name").val();
            var pSurname = $("#Surname").val();

            $.post('../api/personel', { Id: pId, Name: pName, Surname: pSurname }, function (result) {
                alert("Kayıt eklendi");
            });
        });
    });
</script>

